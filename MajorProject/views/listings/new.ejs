<% layout('layouts/boilerplate') %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2 class="heading">Create new Listing</h2>
                <form method="post" action="/listings">
                <div class="mb-3">
                    <label for="title" class="form-label">Enter Title</label>
                    <input type="text" name="listing[title]" placeholder="Add a Catchy title" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" name="listing[description]"  class="form-control"></textarea>
                 </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image Link</label>
                    <input type="text" name="listing[image]" placeholder="enter image URL/link" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4"> 
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" placeholder="1200" class="form-control">
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" placeholder="Araku Vizag" class="form-control">
                    </div>

                </div>
                
                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" placeholder="India" class="form-control">
                    <br><br>
                </div>
                <button class="btn btn-dark add-btn mt-3">Add Listing</button>
        
        
            </form>


        </div>
    </div>
    